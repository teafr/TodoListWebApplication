@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="col-md-4 bg-white p-4 rounded shadow">
    <h2 class="text-center mb-4">Register</h2>
    <form asp-action="Register" asp-controller="Account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input id="username" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input id="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label  asp-for="Password" class="form-label"></label>
            <input id="password" asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" asp-for="ConfirmPassword" class="form-label">Confirm password</label>
            <input id="confirmPassword" asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="submit" value="Register" class="btn btn-success w-100 p-2" />
        <p class="text-center">
            You have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
        </p>
        <div class="text-center">
            <a asp-controller="Tasks" asp-action="Index" class="text-decoration-none mt-3">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}