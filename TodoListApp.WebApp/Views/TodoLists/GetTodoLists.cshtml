@model ListOfTodoLists

@{
    ViewData["Title"] = "Todo Lists";
    Layout = "~/Views/Shared/_TodoListLayout.cshtml";
}

<h2>Todo Lists</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Todo List Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todoList in Model.TodoLists)
            {
                <tr>
                    <td>
                        <a asp-action="GetTasks">@todoList.Title</a>
                    </td>
                    <td>@todoList.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@todoList.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@todoList.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="User">Create New Todo List</a>
</div>